<RoundedButton@Button>:
        background_color: 0,0,0,0
        canvas.before:
                Color:
                        rgba: (.564, .729, 1, 1) if self.state=='normal' else (0,.7,.7,1)
                RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8,]

<RoundedButtonDelete@Button>:
        background_color: 0,0,0,0
        canvas.before:
                Color:
                        rgba: (1, 0, 0, 1) if self.state=='normal' else (0,.7,.7,1)
                RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [8,]              

<RoundedTextInput@TextInput>:
        background_color: 0,0,0,0
        foreground_color: 1,1,1,1
        text: ''
        size_hint: (.95, None)
        height: '37dp'
        font_size: '20dp'
        padding: '5dp'
        pos_hint: {'center_x': .5, 'center_y': 1}
        canvas.after:
                Color:
                        rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]

<SearchInput@TextInput>:
        background_color: 0,0,0,0
        foreground_color: 1,1,1,1
        hint_text: 'Search ...'
        size_hint: (.5, None)
        height: '37dp'
        font_size: '20dp'
        padding: '5dp'
        multiline: False

        text_size: self.size
        halign: 'left'
        valign: 'middle'
        
        canvas.after:
                Color:
                        rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]

<ElementTextInput@TextInput>:
        background_color: .2,.2,.2,1
        foreground_color: 1,1,1,1
        pos_hint: {'center_x': .5, 'center_y': 1}
        canvas.after:
                Color:
                        rgba: (.564, .729, 1, 1)
                Line:
                        width: 0.5
                        rectangle: self.x, self.y, self.width, self.height

<LeftAlignedLabel@Label>:
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        size_hint: (0.95, .1)
        font_size: '17dp'
        pos_hint: {'center_x': .5, 'center_y': 1}

<ElementTitle@Label>:
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        size_hint: (0.95, None)
        height: '25dp'
        font_size: '17dp'
        pos_hint: {'center_x': .5, 'center_y': 0}

<RightAlignedLabel@Label>:
        text_size: self.size
        halign: 'right'
        valign: 'middle'

<DeleteButton@Button>:
        background_color: (1, 0, 0, 1)
        background_normal: ''
        Image:
                source: "./img/delete.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                height: '40dp'
                width: '40dp'
                allow_stretch: True
